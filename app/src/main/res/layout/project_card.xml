<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/project_poster_image"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@color/cardview_light_background"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/project_title_background_trans">

                <TextView
                    android:id="@+id/projectTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingStart="5dp"
                    android:singleLine="false"
                    android:text="Titlesdfsd fdf sdfs fdsf sdf df sdfdfasd ds"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:gravity="center" />
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"

            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableLayout">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="-7dp">

                    <TextView
                        android:id="@+id/project_price"
                        android:layout_height="20dp"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:text="0_0"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/project_funded"
                        android:layout_height="20dp"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0_1"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:layout_marginLeft="1dp" />

                    <TextView
                        android:id="@+id/project_togo"
                        android:layout_height="20dp"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        android:text="0_2"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:gravity="center"
                        android:layout_marginLeft="1dp" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:baselineAligned="false">

                    <TextView
                        android:layout_height="20dp"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:text="@string/price"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:gravity="center" />

                    <TextView
                        android:layout_height="20dp"
                        android:layout_column="1"
                        android:text="@string/funded"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="1dp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:text="@string/togo"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="1dp" />

                </TableRow>
            </TableLayout>

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressBarCard"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="80"/>
    </LinearLayout>
</android.support.v7.widget.CardView>